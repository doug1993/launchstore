{% macro products(name, classes, products) %}
   
   <section class="shop {{classes}}">
      {% if name %}
         <h2>{{name}}</h2>
      {% endif %}

      <div class="items">
      
         {% for product in products %}
         
            <div class="product">
         
               <div class="image">
                  <img src="{{product.img if product.img else '//placehold.it/250x350'}}" alt="{{image.name}}" >
               </div> 
                 
               {% if product.old_price != product.price %}
                  <div class="old-price">
                   <p>{{product.old_price}}</p>
                  </div>
                  {% else %}
                  <div class="old-price">
                   <p>first price</p>
                  </div>
               {% endif %}

              
               <div class="pro-des">
                
                  <p>{{product.price}}</p>
                  <h4>{{product.name}}</h4>
               </div>
                
                  <a href="/products/{{product.id}}" class="button"> Ver Produtos</a>

            </div>
         
         {% endfor %}
      
      </div>

   </section>

{% endmacro%}