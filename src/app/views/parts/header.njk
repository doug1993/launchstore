<header>
   <div class="container">

      <a href="/">

         <div class="logo">

            <h1>Launchstore</h1>
            <h2>COMPRA E VENDA</h2>
         </div>

      </a>

      <form action="/products/search" method="GET" class="search">

         <input type="text" name="filter" placeholder="Buscar por Produtos"
            {% if search.term %}
               value={{search.term}}
            {% endif %}
         >
      </form>

      <nav class="primary">
         <ul>
            <li>
               <a href="/products/create">
                  <i class="material-icons">add</i>
                     Novo Anuncio
               </a>
            </li>
            <li class="accounts">
               <a href="/accounts">
                  <i class="material-icons">account_circle</i>
                  Minha Conta
               </a>
               {%if session.userId %}
                  <ul class="submenu">
                     <li>
                        <a href="/users"> CONFIGURACOES </a>
                     </li>
                     <li>
                        <a href="/buying">MEUS PEDIDOS</a>
                     </li>
                     <li>
                        <a href="/selling">MINHAS VENDAS</a>
                     </li>
                     <li>
                        <form action="/users/logout" method="POST">
                           <button class="sub-menu">SAIR</button>
                        </form>
                     </li>
                  </ul>
               {% endif %}
            </li>
         </ul>
      </nav>
   </div>
</header>