{% extends "layout.njk" %}

{% block content %}

<section class=" password container form">
    <form method="POST" action="/users/forgot-password">

        <div class="header">
            <h3>Esqueceu a Senha?</h3>
        </div>

        
        <div class="fields">
            
            <div class="item">
                <div>Email</div>
                <div class="input">
                    <input 
                        type="email" 
                        name="email"
                        placeholder="Digite o email cadastrado"
                        value="{{user.email }}"
                        onblur="Validate.apply(this, 'isEmail')"
                    >
                </div>
            </div>

        </div>

        <button class="button recover" type="submit">Recuperar</button>
        <div class="footer">
          <ul class="footer">
              <li><h4>Ainda nao esta cadastrado?</h4>
                  <a href="/users/register">Registre-se</a>
              </li>
            
          </ul>
        </div>
    </form>
</section>


{% endblock content %}