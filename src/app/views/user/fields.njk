<div class="item">
   <div>Nome Completo</div>
   <div>
      <input type="text"
      name="name" placeholder="Por favor digite seu Nome Completo"
      value="{{user.name}}">
   </div>
</div> 


<div class="item">
   <div>Email</div>
      <div>
         <input type="email"
         name="email" placeholder="Por favor seu email aqui
         value="{{user.email}}">
      </div>
</div> 

<div class="item">
   <div>Senha</div>
      <div>
         <input type="password" 
         name="pasword" placeholder="Escolha uma senha"
         value="{{user.password}}">
      </div>
</div> 

{% if not user.id %}
      <div class="item">
         <div>Repetir Senha</div>
            <div>
               <input type="password"
               name="paswordRepeat" placeholder="Repita a senha escolhida"
               >
            </div>
      </div>   
{% endif %}

<div class="item">
   <div>CPf ou CNPJ</div>
      <div>
         <input type="text" 
         name="cpf_cnpj" placeholder="Por favor CPF ou CNPJ"
         value="{{user.cpf_cnpj}}">
      </div>

</div> 

<div class="item">
   <div>CEP</div>
      <div>
         <input type="text" 
         name="cep" placeholder="Cep :99999-999"
         value="{{user.cep}}">
      </div>

</div> 
<div class="item">
   <div>Endereco Completo</div>
      <div>
         <input type="text" 
         name="addres" placeholder="Por favor digite seu Endereco"
         value="{{user.addres}}">
      </div>

</div> 


